<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="PlanShare.App.Resources.Styles.LabelStyles"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fontFamily="clr-namespace:PlanShare.App.Constants">


    <Style TargetType="Label">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="{Static fontFamily:FontFamily.SECONDARY_FONT_REGULAR}" />
    </Style>

    <Style x:Key="PageTitle" TargetType="Label">

        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontFamily" Value="{Static fontFamily:FontFamily.MAIN_FONT_BOLD}" />
    </Style>

    <Style x:Key="TitleForEntry" TargetType="Label">

        <Setter Property="Margin" Value="4,0,0,0" />
        <Setter Property="FontSize" Value="8" />
        <Setter Property="FontFamily" Value="{Static fontFamily:FontFamily.MAIN_FONT_THIN}" />
    </Style>



</ResourceDictionary>