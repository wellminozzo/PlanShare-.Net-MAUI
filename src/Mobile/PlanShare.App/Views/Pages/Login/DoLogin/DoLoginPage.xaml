<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PlanShare.App.Views.Pages.Login.DoLogin.DoLoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:PlanShare.App.Views.Components.Inputs"
    xmlns:fontFamily="clr-namespace:PlanShare.App.Constants">

    <VerticalStackLayout Spacing="30">
        <Label
            Margin="0,0,0,10"
            Style="{StaticResource PageTitle}"
            Text="Login" />


        <components:EntryAndLabelComponent
            Title="Email"
            Keyboard="Email"
            Placeholder="John@doe.com.br" />

        <components:EntryAndLabelPassword Title="Senha" />

        <Label
            Margin="0,10,0,40"
            FontFamily="{Static fontFamily:FontFamily.SECONDARY_FONT_BLACK}"
            HorizontalOptions="End"
            Text="Esqueceu sua Senha?"
            TextDecorations="Underline" />


        <Button Text="Login" />
    </VerticalStackLayout>
</ContentPage>